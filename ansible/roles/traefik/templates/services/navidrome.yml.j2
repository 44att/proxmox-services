---
http:
  routers:
    to-navidrome-http:
      rule: "Host(`music.{{ external_domain }}`)"
      service: navidrome
      middlewares:
        - https-redirect

    to-navidrome:
      rule: "Host(`music.{{ external_domain }}`)"
      service: navidrome
      tls:
        certResolver: letsencrypt
        domains:
          - main: "{{ external_domain }}"
            sans:
              - "*.{{ external_domain }}"

  services:
    navidrome:
      loadBalancer:
        servers:
          - url: http://192.168.1.38:4533
